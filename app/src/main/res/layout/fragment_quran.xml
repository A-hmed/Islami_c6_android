<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.quran_fragment.FragmentQuran">
    <ImageView
        android:id="@+id/quran_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/quran_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".25"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        />
    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gold"
        app:layout_constraintTop_toBottomOf="@id/quran_logo"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/quran_fragment_sura_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_line"
        android:text="Sura name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gold"
        app:layout_constraintTop_toBottomOf="@id/quran_fragment_sura_name_text_view"
        android:layout_marginTop="12dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sura_names_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_line"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_sura_name"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        />
</androidx.constraintlayout.widget.ConstraintLayout>